<!Doctype HTML>
<HTML>
<header>

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

</header>

<body>
  <% if user_signed_in? %>
<div class="search">


<h1>Ingredients</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :IngredientName_cont, "Search For Ingredients" %>
  <%= f.search_field :IngredientName_cont %>
<div class="actions"><%= f.submit "Search" %></div>
<% end %>
</div>
<%= link_to 'New Ingredient', new_ingredient_path %>
<br/>
<div class="ingblock">
<div class="ing-container">
<table>
  <thead>
    <tr>
      <th> Ingredient Name </th>
      <th> Ingredient Description </th>
      <th> Add Ingredient </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @Ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.IngredientName %></td>
        <td><%= ingredient.IngredientDescription %></td>
        
        <td>   <br/><button class="button">
	<%= image_tag(ingredient.IngredientImage, :width => '80', :height =>'80' ) %>

	<br/>

	</button></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> <br> <form action="/ingredients/1">
        <input type="submit" value ="ADD" />
        </form> </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>


<% end %>
</div>
</div>
</div>
</body>
</HTML>